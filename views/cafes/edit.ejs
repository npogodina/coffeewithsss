<%- include("../partials/header") %>
<div class="container">
    <h1 style="text-align: center">Edit <%= cafe.name %></h1>
    <div class="row">
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cafes/<%= cafe._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cafe[name]" value="<%= cafe.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cafe[image]" value="<%= cafe.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="cafe[lattePrice]" value="<%= cafe.lattePrice %>" min="2.00" step="0.05">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cafe[description]" value="<%= cafe.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/cafes">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>